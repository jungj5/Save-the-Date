{
  "manifest_version": 2,

  "name": "Pencil-It-In for Google Calendar",
  "description": "Efficiently manage your Google Calendar. Quickly add & edit events by clicking a date on any website or through the toolbar button.",
  "version": "0.1",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Pencil-It-In",
    "default_popup": "html/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["https://docs.google.com/*", "https://calendar.google.com/*"],
      "css": [
        "css/mark.css"
      ],
      "js": [
        "node_modules/jquery/dist/jquery.min.js",
        "node_modules/mark.js/dist/mark.min.js",
        "node_modules/chrono-node/chrono.min.js",
        "js/parser.js",
        "js/marker.js",
        "js/main.js",
        "js/popup.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["node_modules/jquery/dist/jquery.min.js", "js/background.js"]
  },

  "web_accessible_resources": [
    "html/hover_popup.html",
    "css/materialize.css",
    "node_modules/jquery/dist/jquery.min.js"
  ],

  "content_security_policy": "script-src https://*.google.com 'unsafe-eval'; object-src 'self'",

  "oauth2": {
     "client_id": "YOUR KEY HERE",
     "scopes": [
       "https://www.googleapis.com/auth/calendar"
     ]
   },

  "permissions": [
    "activeTab",
    "identity"
  ]
}
