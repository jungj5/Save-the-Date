{
  "manifest_version": 2,

  "name": "Pencil-It-In for Google Calendar",
  "description": "Efficiently manage your Google Calendar. Quickly add & edit events by clicking a date on any website or through the toolbar button.",
  "version": "0.1",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Pencil-It-In",
    "default_popup": "popup.html"
  },

  "content_scripts": [
	  {
	    "matches": ["http://*/*", "https://*/*"],
      "js": ["parser.js"],
	    "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
